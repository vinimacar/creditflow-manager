rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Collection: users
    match /users/{userId} {
      // Usuários podem ler seu próprio perfil
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Usuários podem criar seu próprio perfil na primeira vez
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Apenas admins podem alterar roles e outros dados sensíveis
      allow update: if request.auth != null && (
        (request.auth.uid == userId && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
      
      // Apenas admins podem deletar usuários
      allow delete: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Collections de dados (clientes, fornecedores, produtos, etc)
    match /{collection}/{document=**} {
      // Leitura: todos os usuários autenticados
      allow read: if request.auth != null;
      
      // Escrita: todos os usuários autenticados
      // (você pode customizar para restringir baseado em roles se necessário)
      allow write: if request.auth != null;
    }
  }
}
